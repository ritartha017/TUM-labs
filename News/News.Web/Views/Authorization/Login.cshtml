@model News.DAL.Models.User;

@if (Model == null)
{
    <div class="site-section d-flex justify-content-center align-items-center">
        <div class="container" style="width:500px;">
        <form method="post">
            <div class="form-outline mb-4">
                <input name="email" class="form-control" />
                <label class="form-label">Email</label>
            </div>

            <div class="form-outline mb-4">
                    <input name="password" type="password"  class="form-control" />
                <label class="form-label">Parola</label>
            </div>

            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value=""/>
                        <label class="form-check-label"> Tine-ma minte </label>
                    </div>
                </div>

                <div class="col">
                    <a href="#!">Ai uitat parola?</a>
                </div>
            </div>

            <button class="btn btn-primary btn-block mb-4">Logare</button>

            <div class="text-center">
                <p><a href="#!">Înregistrare</a></p>
            </div>
        </form>
        </div>
    </div>
}
else
{
    @Url.Action("Index", "Home")
}